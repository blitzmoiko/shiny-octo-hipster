<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cityproperties.domain">
    <class name="MailType" table="C_MAIL_TYPE">
        <id name="mailTypeId" type="int">
            <column name="M_TYPE_ID" />
            <generator class="native" />
        </id>
        <many-to-one name="letterContent" class="LetterContent" fetch="select">
            <column name="L_CONTENT_ID" not-null="true" />
        </many-to-one>
        <many-to-one name="letterTemplate" class="LetterTemplate" fetch="select">
            <column name="L_TEMPLATE_ID" not-null="true" />
        </many-to-one>
        <property name="description" type="string">
            <column name="TYPE_NAME" length="32" not-null="true" />
        </property>
        <property name="revisionDate" type="timestamp">
            <column name="REVISION_DATE" not-null="true" />
        </property>
        <set name="mailRecords" table="C_MAIL_RECORD" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="M_TYPE_ID" not-null="true" />
            </key>
            <one-to-many class="MailRecord" />
        </set>
    </class>
</hibernate-mapping>
