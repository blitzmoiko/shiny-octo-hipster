<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cityproperties.domain">
	<class name="Client" table="C_CLIENT">
		<id name="clientId" type="int">
			<column name="CLIENT_ID" />
			<generator class="native" />
		</id>
		<property name="firstName" type="string">
			<column name="F_NAME" length="32" not-null="true" />
		</property>
		<property name="lastName" type="string">
			<column name="L_NAME" length="32" not-null="true" />
		</property>
		<property name="username" type="string">
			<column name="USERNAME" length="32" not-null="true" />
		</property>
		<property name="password" type="string">
			<column name="PASSWORD" length="32" not-null="true" />
		</property>
		<property name="isSuper" type="boolean">
			<column name="IS_SUPER" length="1" not-null="true" />
		</property>
		<property name="isActive" type="boolean">
			<column name="IS_ACTIVE" length="1" not-null="true" />
		</property>
		<set name="businessAssociates" table="C_BA" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="CLIENT_ID" not-null="true" />
			</key>
			<one-to-many class="BusinessAssociate" />
		</set>
		<set name="clientPrivileges" table="C_CLIENT_PRIVILEGE" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="CLIENT_ID" not-null="true" />
			</key>
			<one-to-many class="ClientPrivilege" />
		</set>
	</class>
</hibernate-mapping>
